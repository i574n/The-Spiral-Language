// Does the variable transfer work?

open utils

let compile_kernel (kernel_name : string) =
    $"if not os.path.exists('kernels'): os.mkdir('kernels')"
    inl file = $"open(f'kernels/{!kernel_name}.c','w')" : $"object"
    $"!file.write(kernels[!kernel_name])"
    $"os.system(f'dpu-upmem-dpurte-clang -o kernels/{!kernel_name}.dpu kernels/{!kernel_name}.c')"

inl main () =
    global "import os"
    global "from io import StringIO"
    global "from sys import stdout"
    global "import struct"

    let f (a,b,c,d) = join_backend UPMEM_C_Kernel 
        inl q : i32 = a + b + c + d
        inl w = a * b * c * d
        $"!a = !q"
        $"!b = !w"
        0i32
    inl kernel_name, vars = f (1,2,3,4)
    compile_kernel kernel_name
    inl dpu = $"DpuSet(nr_dpus=1, binary=f'kernels/{!kernel_name}.dpu')" : $"DpuSet"
    real dpu_pack dpu vars
    $"!dpu.exec()" // Note: Putting in log=stdout and not using a printf inside the kernel results in an error.
    inl q,w,_ : i32 * i32 * _ = real dpu_unpack dpu vars
    $"print(!q,!w)"
    ()