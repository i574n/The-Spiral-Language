open corebase
open tensorm

type ptr = partitionm.ptr 
type size = partitionm.size 

nominal layer a b = {
    run : a -> b
    // reinitialize_io : ptr -> a -> b
    }

union rec layers a c =
    | Layer : layer a c
    | LayerPair : exists b. layers a b * layers b c

nominal desc a b = {
    initialize : ptr * size -> layer a b
    size_global : size
    size_shared : size
    }

union rec descs a c =
    | Desc : desc a c
    | DescPair : exists b. descs a b * descs b c

