inl loop_thread_in_block' forall dim. (dim : dim) (body : dim -> ()) =
    inl by : int = $"thread_block::num_threads()"
    inl from : int = $"thread_block::thread_rank()"
    inl nearTo : int = real tensorm.utils.prod dim
