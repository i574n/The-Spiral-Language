{
	"name": "spiral-lang-vscode",
	"version": "2.0.0",
	"description": "VS Code editor support plugin + the Spiral language compiler.",
	"repository": {
		"url": "https://github.com/mrakgr/The-Spiral-Language"
	},
	"publisher": "mrakgr",
	"author": "Marko GrdiniÄ‡",
	"engines": {
		"vscode": "^1.44.0"
	},
	"main": "out/index.js",
	"activationEvents": [
		"onLanguage:spiral"
	],
	"contributes": {
		"commands": [
			{
				"command": "buildFile",
				"title": "Build File",
				"category": "Spiral"
			}
		],
		"languages": [
			{
				"id": "spiral",
				"configuration": "./language-configuration.json",
				"extensions": [
					".spi",
					".spir",
					".spiproj"
				],
				"aliases": [
					"Spiral"
				]
			}
		],
		"semanticTokenTypes": [
			{
				"id": "symbol",
				"superType": "member",
				"description": "A compile-time symbol."
			},
			{
				"id": "unary_operator",
				"superType": "class",
				"description": "An unary operator."
			},
			{
				"id": "type_variable",
				"superType": "type",
				"description": "A type variable."
			},
			{
				"id": "escaped_char",
				"superType": "operator",
				"description": "Escaped character."
			},
			{
				"id": "unescaped_char",
				"superType": "member",
				"description": "Unescaped character."
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"keywords": [
		"spiral"
	],
	"devDependencies": {
		"@types/lodash": "^4.14.161",
		"@types/node": "^14.14.14",
		"@types/vscode": "^1.44.0",
		"ts-loader": "^8.0.12",
		"typescript": "^4.1.3",
		"webpack": "^5.11.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"lodash": "^4.17.20",
		"zeromq": "^6.0.0-beta.6"
	}
}
