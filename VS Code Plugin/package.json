{
	"name": "spiral-lang-vscode",
	"displayName": "The Spiral Language",
	"version": "2.0.27",
	"description": "VS Code editor support plugin + the Spiral language compiler.",
	"repository": {
		"url": "https://github.com/mrakgr/The-Spiral-Language"
	},
	"publisher": "mrakgr",
	"author": "Marko GrdiniÄ‡",
	"engines": {
		"vscode": "^1.44.0"
	},
	"main": "out/index.js",
	"activationEvents": [
		"onLanguage:spiral"
	],
	"contributes": {
		"configuration": {
			"title": "Spiral Configuration",
			"properties": {
				"spiral.openServerInShell": {
					"type": "boolean",
					"default": false,
					"description": "Open the language server in the shell during starup."
				},
				"spiral.port": {
					"type": "number",
					"default": 13805,
					"description": "The TCP port the editor communicates with a the server. Also uses up the port after it. For example, 13805 and 13806. The plugin needs to be restarted for this change to take effect."
				}
			}
		},
		"commands": [
			{
				"command": "buildFile",
				"title": "Build File",
				"category": "Spiral"
			},
			{
				"command": "startServer",
				"title": "Start Server",
				"category": "Spiral"
			},
			{
				"command": "startServerInShell",
				"title": "Start Server In Shell",
				"category": "Spiral"
			}
		],
		"languages": [
			{
				"id": "spiral",
				"configuration": "./language-configuration.json",
				"extensions": [
					".spi",
					".spir",
					".spiproj"
				],
				"aliases": [
					"Spiral"
				]
			}
		],
		"semanticTokenTypes": [
			{
				"id": "symbol",
				"superType": "member",
				"description": "A compile-time symbol."
			},
			{
				"id": "unary_operator",
				"superType": "class",
				"description": "An unary operator."
			},
			{
				"id": "type_variable",
				"superType": "type",
				"description": "A type variable."
			},
			{
				"id": "escaped_char",
				"superType": "operator",
				"description": "Escaped character."
			},
			{
				"id": "unescaped_char",
				"superType": "member",
				"description": "Unescaped character."
			}
		]
	},
	"scripts": {},
	"keywords": [
		"spiral"
	],
	"devDependencies": {
		"@types/node": "^14.14.14",
		"@types/vscode": "^1.44.0",
		"typescript": "^4.1.3"
	},
	"dependencies": {
		"zeromq": "^6.0.0-beta.6"
	}
}
